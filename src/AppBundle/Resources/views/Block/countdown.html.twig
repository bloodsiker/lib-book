<script>
    getTimeRemaining = function(endtime){
        var t = Date.parse(endtime) - Date.parse(new Date());
        var seconds = Math.floor( (t/1000) % 60 );
        var minutes = Math.floor( (t/1000/60) % 60 );
        var hours = Math.floor( (t/(1000*60*60)) % 24);
        var days = Math.floor( (t / (1000*60*60)) / 24 );
        return {
            'total': t,
            'days': days,
            'hours': hours,
            'minutes': minutes,
            'seconds': seconds
        };
    }
    function printDays (days){
        var days_number = document.getElementById('days_number'),
                days_item = document.getElementById('days_item');
        switch (days){
            case 0 :
                console.log('0 days');
                break;
            case 1 :
                days_item.innerHTML = 'день';
                days_number.innerHTML = days;
                break;
            case 2 :
            case 3 :
            case 4 :
            case 22 :
                days_item.innerHTML = 'дня';
                days_number.innerHTML = days;
                break;
            default :
                days_item.innerHTML = 'дней';
                days_number.innerHTML = days;
        }
    }
    function printHours (hours){
        var hours_number = document.getElementById('hours_number'),
                hours_item = document.getElementById('hours_item');
        switch (hours){
            case 1 :
            case 21 :
                hours_item.innerHTML = 'час';
                break;
            case 2 :
            case 3 :
            case 4 :
            case 22 :
            case 23 :
                hours_item.innerHTML = 'часа';
                break;
            default :
                hours_item.innerHTML = 'часов';
        }
        hours_number.innerHTML = hours;
        if (hours < 10) {
            hours_number.innerHTML = '0' + hours;
        }

    }
    function printMinutes (minutes){
        var minutes_number = document.getElementById('minutes_number'),
                minutes_item = document.getElementById('minutes_item');

        switch (minutes){
            case 1 :
            case 21 :
            case 31 :
            case 41 :
            case 51 :
                minutes_item.innerHTML = 'минута';
                break;
            case 2 :
            case 3 :
            case 4 :
            case 22 :
            case 23 :
            case 24 :
            case 32 :
            case 33 :
            case 34 :
            case 42 :
            case 43 :
            case 44 :
            case 52 :
            case 53 :
            case 54 :
                minutes_item.innerHTML = 'минуты';
                break;
            default :
                minutes_item.innerHTML = 'минут';
        }
        minutes_number.innerHTML = minutes;
        if (minutes < 10) {
            minutes_number.innerHTML = '0' + minutes;
        }
    }
    function printSeconds (seconds){
        var seconds_number = document.getElementById('seconds_number'),
                seconds_item = document.getElementById('seconds_item');
        switch (seconds){
            case 1 :
            case 21 :
            case 31 :
            case 41 :
            case 51 :
                seconds_item.innerHTML = 'секунда';
                break;
            case 2 :
            case 3 :
            case 4 :
            case 22 :
            case 23 :
            case 24 :
            case 32 :
            case 33 :
            case 34 :
            case 42 :
            case 43 :
            case 44 :
            case 52 :
            case 53 :
            case 54 :
                seconds_item.innerHTML = 'секунды';
                break;
            default :
                seconds_item.innerHTML = 'секунд';
        }
        seconds_number.innerHTML = seconds;
        if (seconds < 10) {
            seconds_number.innerHTML = '0' + seconds;
        }
    }

    initializeClock = function(endTime){
        var timeInterval = setInterval(function(){
            var t = getTimeRemaining(endTime);
            printDays(t.days);
            printHours(t.hours);
            printMinutes(t.minutes);
            printSeconds(t.seconds);
            if(t.total<=0){
                clearInterval(timeInterval);
            }
        },1000);
    }

    {#var deadline = '{{ settings.end_date }}';#}
    var deadline = 'April 26 2017 11:00:00';
    initializeClock(deadline);
</script>