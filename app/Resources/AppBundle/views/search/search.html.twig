<div class="col-cont">
    <div class="container">
        {% if app.request.get('search') %}
            <h1>Результаты поиска по запросу <span class="highlight">{{ app.request.get('search')|raw }}</span></h1>
        {% endif %}
        <hr class="line">

        <form action="{{ path('search') }}" class="form">
            <div class="inputs">
                <input type="text" name="search" placeholder="Искать...(название книги, автор)" value="{{ app.request.get('search') }}">
                <button>Искать</button>
            </div>
        </form>

        <div class="grid">
            {{
            sonata_block_render(
                { 'type': 'app.block.service.search' },
                {
                    'items_count' : 40,
                    'page': app.request.get('page') ? app.request.get('page') : 1,
                    'search' : app.request.get('search', null),
                }
            )
            }}
        </div>

    </div>
</div>
