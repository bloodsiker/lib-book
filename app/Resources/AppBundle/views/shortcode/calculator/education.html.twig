<div class="calc_cont education_cont">
	<fieldset class="education_calc">
		<legend>{{ app.request.locale == 'ru' ? 'Налоговый возврат за обучение' : 'Податкове повернення за навчання' }}:</legend>
		<div>{{ app.request.locale == 'ru' ? 'Официальная зарплата за год' : 'Офіційна зарплата за рік' }}:<br><input type="text" id="educationcalc_salary" value=""></div>
		<div>{{ app.request.locale == 'ru' ? 'Расходы на образование за год' : 'Витрати на освіту за рік' }}:<br><input type="text" id="educationcalc_costs" value=""></div>

		<div><input type="button" id="educationcalc_button" value="{{ app.request.locale == 'ru' ? 'Рассчитать' : 'Розрахувати' }}"></div>
		<div>{{ app.request.locale == 'ru' ? 'Результат' : 'Результат' }}: <span id="educationcalc_result">-</span></div>
	</fieldset>
</div>
<script>
    function educationcalc_init() {
        document.getElementById('educationcalc_button').addEventListener('click', function(){
            salary = document.getElementById('educationcalc_salary').value+'';
            costs = document.getElementById('educationcalc_costs').value+'';

            salary = salary.replace(",",".");
            salary = salary.replace(" ","");
            salary = parseInt(salary);

            costs = costs.replace(",",".");
            costs = costs.replace(" ","");
            costs = parseInt(costs);

            document.getElementById('educationcalc_result').innerHTML = Math.round((salary > costs ? costs : salary) * 0.18) + 'грн';
        });
    }
    educationcalc_init();
</script>