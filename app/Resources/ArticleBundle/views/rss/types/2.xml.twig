<rss version="2.0" xmlns="https://backend.userland.com/rss2" xmlns:yandex="https://news.yandex.ru">
	<channel>
		{% include 'ArticleBundle:rss/blocks:rss_head.xml.twig' %}

		<yandex:logo type="square">{{ absolute_url(asset('bundles/app/img/logo-180.jpg')) }}</yandex:logo>

		{% for article in articles %}
			<item>
				<title>{{ article.title }}</title>
				<link>{{ absolute_url(article_path(article)) }}</link>
				<description><![CDATA[ {% if article.image %}<img src="{{ absolute_url(article.image.getPath|get_actual_image('image_610x343', ['main_new', 'main'])) }}" alt="{{ article.image.getDescription() }}" border=0> {% endif %}{{ article.getHeader()|raw }}]]></description>
				<category>{{ article.getCategory.getTitle }}</category>
				<pubDate>{{ article.publishAt|date('r') }}</pubDate>
				{% if article.image %}
					<enclosure url="{{ absolute_url(article.image.getPath|get_actual_image('image_610x343', ['main_new', 'main'])) }}" type="image/jpeg"/>
				{% endif %}
				<yandex:full-text>{{ article.getDescription()|shortcode(['external_links'])|html_entity_decode|raw }}</yandex:full-text>
			</item>
		{% endfor %}

	</channel>
</rss>
