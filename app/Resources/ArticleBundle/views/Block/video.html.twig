{% import "ArticleBundle:Block/macros:item.html.twig" as item %}
{% if article is not empty %}
    <div class="block">
        {% if settings.show_label %}
            <a href="{{ article_category_path(category) }}" class="b-label b-label-red">{{ category.getTitle() }}</a>
        {% endif %}
        <a href="{{ article_path(article) }}" class="b-news b-news-video">
            <div class="b-news-img-wrap">
                <div class="b-news-img">
                    <img src="{{ article.getImage() ? article.getImage().getPath()|get_actual_image('image_300x200', ['main']) : default_article_image|imagine_filter('image_300x200') }}">
                </div>
            </div>
            <h4>{{ item.item_title(article)|raw }}</h4>
            <div class="b-news-meta">
                <span>{{ article.publishAt|date_time_humanize() }}</span>
            </div>
            <p>{{ article.getHeader()|striptags|raw }}</p>
        </a>
    </div>
{% endif %}