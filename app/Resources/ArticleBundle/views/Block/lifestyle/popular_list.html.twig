{% import "ArticleBundle:Block/macros:item.html.twig" as item %}
{% set articles_count = articles|length %}

{% if articles_count %}
    <div class="block-title article-populat-title">
        <h3>{{ 'front.popular'|trans({}, 'ArticleBundle') }}</h3>
    </div>

    {% if articles_count > 1 %}
        <div class="row news-blocks">
            {% for article in articles[:2] %}
                <div class="col-md-6">
                    {{ item.item_lifestyle(article, 'news-block-2', 'image_650x434', 'ls') }}
                </div>
            {% endfor %}
        </div>
    {% endif %}

    {% if articles_count > 2 %}
        <div class="row news-blocks">
            {% for article in articles[2:6] %}
                <div class="col-md-4">
                    {{ item.item_lifestyle(article, 'news-block-3', 'image_310x207', 'lssm') }}
                </div>
            {% endfor %}
        </div>
    {% endif %}

    {% if articles_count > 8 %}
        <div class="row news-blocks">
            {% for article in articles[8:2] %}
                <div class="col-md-6">
                    {{ item.item_lifestyle(article, 'news-block-2', 'image_650x434', 'ls') }}
                </div>
            {% endfor %}
        </div>
    {% endif %}

    {% if articles_count > 10 %}
        <div class="row news-blocks">
            {% for article in articles[10:] %}
                <div class="col-md-4">
                    {{ item.item_lifestyle(article, 'news-block-3', 'image_310x207', 'lssm') }}
                </div>
            {% endfor %}
        </div>
    {% endif %}
{% endif %}